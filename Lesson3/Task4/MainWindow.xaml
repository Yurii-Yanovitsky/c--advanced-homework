        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="162.4" Width="288.667"
        Loaded ="Window_Loaded">
    <Grid Margin="0,0,4.4,0.8" Loaded="Window_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="543*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Label" Content="Label" Margin="19.2,15,143.6,0" VerticalAlignment="Top" Grid.Column="2" RenderTransformOrigin="-2.536,-3.211" Height="60" Width="114" HorizontalAlignment="Center" Grid.IsSharedSizeScope="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
