        <TextBox x:Name="InfoTextBox" Grid.Column="2" HorizontalAlignment="Left" Height="18" Margin="19.2,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>

    </Grid>
</Window>
